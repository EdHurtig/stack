<div class="page-header" id="banner">

  <div class="row">
    <div class="col-lg-6">
      <h1>Events</h1>
      <p class="lead">Events reported by sources via the HTTP REST API</p>
    </div>


    <%= render 'shared/foreman' %>

  </div>
</div>
<div class="row">
  <%= link_to 'New Event', new_event_path, class:"btn btn-success btn-sm pull-right" %>
</div>
<div class="row">
<table class="table table-striped table-hover">
  <thead>
    <tr>
      <th>Title</th>
      <th>Content</th>
      <th>Level</th>
      <th>Source</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @events.each do |event| %>
      <tr class="<%= event.style_class %>">
        <td><%= event.title %></td>
        <td><%= event.content %></td>
        <td><%= event.level %></td>
        <td><%= event.source_name %></td>
        <td><%= link_to 'Show', event %></td>
        <td><%= link_to 'Edit', edit_event_path(event) %></td>
        <td><%= link_to 'Destroy', event, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
</div>

