<div class="page-header" id="banner">

  <div class="row">
    <div class="col-lg-6">
      <h1>Viewing Source</h1>
      <p class="lead">#<%= @source.id %></p>
    </div>


    <%= render 'shared/foreman' %>
  </div>
</div>
<div class="row">
  <%= link_to 'New Source', new_source_path, class:"btn btn-success btn-sm pull-right" %>
</div>

<p id="notice"><%= notice %></p>
<div class="row">
  <div class="col-lg-6">

<p>
  <strong>Name:</strong>
  <%= @source.name %>
</p>

<p>
  <strong>Address:</strong>
  <%= @source.address %>
</p>

<p>
  <strong>Port:</strong>
  <%= @source.port %>
</p>

<p>
  <strong>Kind:</strong>
  <%= @source.kind %>
</p>

<p>
  <strong>Version:</strong>
  <%= @source.version %>
</p>

  </div>
  <div class="col-lg-6">
    <h3>Events</h3>
    <table class="table table-striped table-hover">
      <thead>
      <tr>
        <th>Title</th>
        <th>Content</th>
        <th>Level</th>
        <th>Source</th>
        <th></th>

      </tr>
      </thead>

      <tbody>
        <% @events.each do |event| %>
            <tr class="<%= event.style_class %>">
              <td><%= event.title %></td>
              <td><%= event.content %></td>
              <td><%= event.level %></td>
              <td><%= event.source %></td>
              <td><%= link_to 'Show', event %></td>

            </tr>
        <% end %>
        </tbody>
    </table>
  </div>
</div>
<%= link_to 'Edit', edit_source_path(@source) %> |
<%= link_to 'Back', sources_path %>
